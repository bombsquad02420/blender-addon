{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Blender Attach",
      "type": "python",
      "request": "attach",
      "connect": {
        "host": "localhost",
        "port": 5678
      },
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}",
          "remoteRoot": "${workspaceFolder}"
        }
      ],
      "justMyCode": true
    },
    {
      "name": "Docker: Blender Attach",
      "type": "python",
      "request": "attach",
      "connect": {
        "host": "localhost",
        "port": 5678
      },
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}",
          "remoteRoot": "${env:LOCAL_WORKSPACE_FOLDER}"
        }
      ],
      "justMyCode": true
    },
  ]
}